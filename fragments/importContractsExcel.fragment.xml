<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:u="sap.ui.unified"
	xmlns:l="sap.ui.layout.form">
	<Dialog contentWidth="auto" title="Import Contracts">
		<content>
			<HBox>
				<HBox width="10px"></HBox>
				<u:FileUploader id="idfileUploaderContracts" 
				width="100%" 
				sameFilenameAllowed="false"
				buttonText="" fileType="CSV" 
				placeholder="Choose a CSV file"
				style="Emphasized"></u:FileUploader>
			</HBox>
		</content>
		<buttons>
			<Button text="Upload" press="onUploadFragContracts"></Button>
			<Button text="Cancel" press="onCancelFragContracts"></Button>
		</buttons>
	</Dialog>
</core:FragmentDefinition>